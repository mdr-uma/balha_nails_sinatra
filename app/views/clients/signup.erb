<form action="/signup" method="post">
   <label for="name">Name:</label>
   <input type="text" name="name" id="name" placeholder="name" required pattern="[a-zA-Z]*"><br><br>
   <label for="tel">Phone No.:</label>
   <input type="tel" name="tel" id="tel" placeholder="34234324(optional)" optional><br><br>
   <label for="email">Email:</label>
   <input type="email" name="email" id="email" placeholder="@eg.com" required><br><br>
   <label for="password">Password:</label>
   <input type="password" name="password" id="password" placeholder="password" maxlength="8" required><br><br>
   <input type="submit" value="submit">
</form>
